@model IEnumerable<KhumaloCraft.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Product List</h1>
<h6>You can add your own items and purchase items</h6>

<head>
    <style>
        body {
            background-color: bisque;
            font-family: Arial, sans-serif;
        }

        h1, h6 {
            color: #333;
        }

        a {
            text-decoration: none;
            color: #007bff;
            margin-right: 10px;
        }

        .btn {
            padding: 6px 12px;
            font-size: 14px;
            border-radius: 4px;
            cursor: pointer;
        }

        .btn-primary {
            background-color: #007bff;
            color: #fff;
            border: none;
        }

        .btn-success {
            background-color: #28a745;
            color: #fff;
            border: none;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
            color: #333;
        }

        tr:hover {
            background-color: #f5f5f5;
        }

        .btn-light {
            background-color: #f8f9fa;
            color: #333;
            border: 1px solid #ccc;
        }
    </style>
</head>

<body>
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Product</a>
        <a href="@Url.Action("MyWork", "Home")" class="btn btn-success">Back</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Destination)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Destination)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-light btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-light btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-light btn-sm">Delete</a>
                        <button onclick="location.href='@Url.Action("Index", "Orders")'" type="submit" class="btn btn-light btn-sm">Order</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
